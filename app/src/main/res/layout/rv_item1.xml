<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_8sdp"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:id="@+id/cv"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_item"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/g_medium"
                android:text="11000"
                app:layout_constraintTop_toTopOf="@id/tv_som"
                android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/tv_som"
                app:layout_constraintEnd_toStartOf="@id/tv_som"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_som"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/g_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:rotation="-90"
                android:text="sum"
                android:textSize="@dimen/_6ssp"
                android:textColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/g_medium"
        android:id="@+id/tv_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="#8A8E9E"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/g_medium"
        android:id="@+id/tv_spec"/>

</RelativeLayout>